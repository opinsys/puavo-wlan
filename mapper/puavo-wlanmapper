from __future__ import division
from __future__ import print_function

import collections
import datetime
import os
import os.path
import sys

from PyQt4.QtCore import *
from PyQt4.QtGui import *

class View(QGraphicsView):

    ZOOM_FACTOR = 1.1

    def __init__(self, *args):
        QGraphicsView.__init__(self, *args)

    def wheelEvent(self, event):
        if not event.modifiers() & Qt.ControlModifier:
            QGraphicsView.wheelEvent(self, event)
        else:
            self.setTransformationAnchor(QGraphicsView.AnchorUnderMouse)

            if event.delta() > 0:
                self.scale(View.ZOOM_FACTOR, View.ZOOM_FACTOR)
            else:
                self.scale(1 / View.ZOOM_FACTOR, 1 / View.ZOOM_FACTOR)

            event.accept()

class Scene(QGraphicsScene):

    def __init__(self, *args):
        QGraphicsScene.__init__(self, *args)

        self.measurementsEnabled = False

        self.setupAnimation()

    def getSpotNum(self):
        if self.freeSpotNums:
            return self.freeSpotNums.pop()

        self.maxSpotNum += 1
        return self.maxSpotNum

    def putSpotNum(self, spotNum):
        if spotNum == self.maxSpotNum:
            self.maxSpotNum -= 1
        else:
            self.freeSpotNums.append(spotNum)
            self.freeSpotNums = sorted(self.freeSpotNums, reverse=True)

    def mousePressEvent(self, event):
        QGraphicsScene.mousePressEvent(self, event)
        if not event.isAccepted() and event.button() == Qt.LeftButton and not event.modifiers():
            self.addSpotItem(event.scenePos())
            event.accept()

    def enableMeasurements(self):
        self.measurementsEnabled = True

    def disableMeasurements(self):
        self.measurementsEnabled = False

    def addSpotItem(self, pos):
        self.addItem(SpotItem(Spot(pos, self.getSpotNum())))

    def removeSpotItem(self, spotItem):
        self.putSpotNum(spotItem.spot.num)
        self.removeItem(spotItem)

    def toggleSpotItem(self, spotItem):
        if not self.measurementsEnabled:
            return

        if self.animation.timeLine().state() == QTimeLine.Running:
            self.animation.timeLine().stop()
            self.animation.setStep(0)
            if self.animation.item() == spotItem:
                return

        self.animation.setItem(spotItem)
        self.animation.timeLine().start()

    def clear(self):
        QGraphicsScene.clear(self)
        self.setupAnimation()

    def setupAnimation(self):
        timer = QTimeLine(2000)
        timer.setLoopCount(0)
        self.animation = QGraphicsItemAnimation()
        self.animation.setTimeLine(timer)
        self.animation.setScaleAt(0.0, 1, 1)
        self.animation.setScaleAt(0.5, 3, 3)
        self.animation.setScaleAt(1.0, 1, 1)
        self.freeSpotNums = []
        self.maxSpotNum = 0

class Spot(QObject):

    def __init__(self, pos, num, *args):
        QObject.__init__(self, *args)

        self.pos = pos
        self.num = num

class SpotItem(QGraphicsEllipseItem):

    SPOT_SIZE = 20

    def __init__(self, spot):
        QGraphicsEllipseItem.__init__(self,
                                      SpotItem.SPOT_SIZE / -2,
                                      SpotItem.SPOT_SIZE / -2,
                                      SpotItem.SPOT_SIZE,
                                      SpotItem.SPOT_SIZE)

        self.spot = spot
        self.setPos(spot.pos)
        self.setFlag(QGraphicsItem.ItemIsMovable)
        QGraphicsTextItem("{}".format(spot.num), self)

        self.setAcceptHoverEvents(True)

    def hoverEnterEvent(self, event):
        self.setCursor(QCursor(Qt.PointingHandCursor))

    def mousePressEvent(self, event):
        if event.button() == Qt.RightButton and not event.modifiers():
            self.scene().removeSpotItem(self)
            event.accept()

    def mouseDoubleClickEvent(self, event):
        self.scene().toggleSpotItem(self)
        event.accept()

def get_dot11_interfaces():
    result = []
    for iface in os.listdir('/sys/class/net'):
        if os.path.exists(os.path.join('/sys/class/net/', iface, 'phy80211')):
            result.append(iface)
    return result

Measurement = collections.namedtuple('Measurement',
                                     ['datetime',
                                      'rssi',
                                      'bssid',
                                      'freq'])

class Monitor(QObject):

    started = pyqtSignal()
    stopped = pyqtSignal()
    measurementsReady = pyqtSignal()

    def __init__(self, *args):
        QObject.__init__(self, *args)

        self.__tshark = None

    def start(self, interface, channel):
        if self.__tshark is not None:
            return False

        if QProcess.execute('/sbin/ifconfig', [interface, 'down']) != 0:
            return False

        if QProcess.execute('/sbin/iwconfig', [interface, 'mode', 'monitor']) != 0:
            return False

        if QProcess.execute('/sbin/ifconfig', [interface, 'up']) != 0:
            return False

        if QProcess.execute('/sbin/iwconfig', [interface, 'channel', '{}'.format(channel)]) != 0:
            return False

        self.__tshark = QProcess(self)
        self.__tshark.readyReadStandardOutput.connect(self.measurementsReady)
        self.__tshark.started.connect(self.started)
        self.__tshark.finished.connect(self.stopped)
        tshark_args = ['-i', interface,
                       '-l', # Line-buffered mode, otherwise tshark
                             # outputs frames in big lumps.
                       '-f', 'wlan[0] == 0x80',
                       '-T', 'fields',
                       '-E', 'separator=|',
                       '-e', 'frame.time_epoch',
                       '-e', 'radiotap.dbm_antsignal',
                       '-e', 'wlan.ta',
                       '-e', 'radiotap.channel.freq']
        self.__tshark.start('/usr/bin/tshark', tshark_args, QIODevice.ReadOnly)
        return True

    def stop(self):
        if self.__tshark:
            self.__tshark.close()
            self.__tshark = None

    def readMeasurements(self):
        result = []

        while self.__tshark.canReadLine():
            line = str(self.__tshark.readLine())
            time_epoch, dbm, bssid, freq = line.strip().split('|')

            result.append(
                Measurement(
                    datetime=datetime.datetime.fromtimestamp(float(time_epoch)),
                    rssi=int(dbm),
                    bssid=bssid,
                    freq=int(freq)))

        return result

class MonitorWidget(QWidget):

    def __init__(self, monitor, *args):
        QWidget.__init__(self, *args)

        self.monitor = monitor

        layout = QFormLayout()

        self.interfaceComboBox = QComboBox()
        self.interfaceComboBox.addItems(sorted(get_dot11_interfaces()))
        layout.addRow(QLabel("Interface:"), self.interfaceComboBox)

        self.channelComboBox = QComboBox()
        self.channelComboBox.addItems([str(c) for c in range(1, 14)])
        layout.addRow(QLabel("Channel:"), self.channelComboBox)

        self.captureButton = QPushButton("Capture")
        self.captureButton.setCheckable(True)
        self.captureButton.setChecked(False)
        self.captureButton.setEnabled(self.interfaceComboBox.count() > 0)
        self.captureButton.toggled.connect(self.captureToggled)
        layout.addRow(self.captureButton)

        self.setLayout(layout)

    def captureToggled(self, toggled):
        self.interfaceComboBox.setEnabled(not toggled)
        self.channelComboBox.setEnabled(not toggled)
        if toggled:
            if not self.monitor.start(self.interfaceComboBox.currentText(),
                                      int(self.channelComboBox.currentText())):
                ## TODO: implement proper error message propagation.
                QMessageBox.critical(self,
                                     "Failed to start capturing",
                                     "See console for details.")
                self.captureButton.setChecked(False)
        else:
            self.monitor.stop()

class MainWindow(QMainWindow):

    def __init__(self, *args):
        QMainWindow.__init__(self, *args)

        self.monitor = Monitor(self)

        self.view = View(self)
        self.scene = Scene(self)
        self.layoutPixmap = None

        self.setWindowTitle("Puavo WLAN Mapper")
        self.setStatusBar(QStatusBar(self))

        self.view.setScene(self.scene)

        self.setCentralWidget(self.view)

        self.setupDockWidgets()
        self.setupActions()
        self.setupMenus()

        self.monitor.started.connect(self.scene.enableMeasurements)
        self.monitor.stopped.connect(self.scene.disableMeasurements)

    def closeEvent(self, event):
        self.monitor.stop()

    def sizeHint(self):
        return QSize(800, 600)

    def setupActions(self):
        self.aboutAction = QAction(self)
        self.aboutAction.setText("&About...")
        self.aboutAction.triggered.connect(self.showAboutDialog)

        self.loadAction = QAction(self)
        self.loadAction.setText("&Load layout image...")
        self.loadAction.setShortcut(QKeySequence("Ctrl+O"))
        self.loadAction.triggered.connect(self.loadLayoutImageWithDialog)

        self.quitAction = QAction(self)
        self.quitAction.setText("&Quit")
        self.quitAction.setShortcut(QKeySequence("Ctrl+Q"))
        self.quitAction.triggered.connect(self.close)

    def setupMenus(self):
        menuBar = QMenuBar()

        fileMenu = menuBar.addMenu("&File")
        fileMenu.addAction(self.loadAction)
        fileMenu.addSeparator()
        fileMenu.addAction(self.quitAction)

        viewMenu = menuBar.addMenu("&View")
        viewMenu.addAction(self.monitorDockWidget.toggleViewAction())
        viewMenu.addAction(self.spotsDockWidget.toggleViewAction())

        helpMenu = menuBar.addMenu("&Help")
        helpMenu.addAction(self.aboutAction)

        self.setMenuBar(menuBar)

    def setupDockWidgets(self):
        self.monitorDockWidget = QDockWidget(self)
        self.monitorWidget = MonitorWidget(self.monitor, self)
        self.monitorDockWidget.setWidget(self.monitorWidget)
        self.monitorDockWidget.setWindowTitle("Monitor")
        self.addDockWidget(Qt.LeftDockWidgetArea, self.monitorDockWidget)

        self.spotsDockWidget = QDockWidget(self)
        self.spotsWidget = QTableWidget(self.spotsDockWidget)
        self.spotsDockWidget.setWidget(self.spotsWidget)
        self.spotsDockWidget.setWindowTitle("Spots")
        self.addDockWidget(Qt.BottomDockWidgetArea, self.spotsDockWidget)

    def loadLayoutImageWithDialog(self):
        filepath = QFileDialog.getOpenFileName(self,
                                               "Load layout image",
                                               QDir.currentPath(),
                                               "Images (*.png)")
        if not filepath:
            return

        self.loadLayoutImage(filepath)

    def loadLayoutImage(self, filepath):
        self.layoutPixmap = QPixmap(filepath, "png")
        if self.layoutPixmap.isNull():
            msg = "File {} could not be loaded as a layout image.\n\n" \
                  "Please ensure the layout image is a valid PNG file."
            QMessageBox.critical(self, "Failed to load a layout image",
                                 msg.format(filepath))
        else:
            self.scene.clear()
            self.scene.addPixmap(self.layoutPixmap)
            self.statusBar().showMessage(
                "Loaded layout image {!r}.".format(filepath), 5000)

    def showAboutDialog(self):
        aboutText = QString.fromUtf8(
            "<h1>Puavo WLAN Mapper</h1>"
            "<p>Version 0.1.0</p>"
            "<p>Copyright © 2015 <a href=\"http://opinsys.fi\">Opinsys Oy</a></p>"
            "<p>This program is free software: you can redistribute it and/or "
            "modify it under the terms of the GNU General Public License as "
            "published by the Free Software Foundation, either version 2 of the "
            "License, or (at your option) any later version.</p>"
            "<p>This program is distributed in the hope that it will be useful, but"
            " WITHOUT ANY WARRANTY; without even the implied warranty of "
            "MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE.</p>"
            "<p>See the <a href=\"https://www.gnu.org/licenses/gpl-2.0.html\">GNU "
            "General Public License</a> for more details.</p>")

        QMessageBox.about(self, "About Puavo WLAN Mapper", aboutText)

def main():
    app = QApplication(sys.argv)

    if app.argc() > 2:
        error_message = "ERROR: invalid number of arguments ({})"
        print(error_message.format(app.argc() - 1), file=sys.stderr)
        print("Usage: {} [LAYOUT_PNG]".format(sys.argv[0]), file=sys.stderr)
        return 1

    win = MainWindow()
    win.show()

    if app.argc() == 2:
        win.loadLayoutImage(sys.argv[1])

    return app.exec_()

if __name__ == "__main__":
   sys.exit(main())
