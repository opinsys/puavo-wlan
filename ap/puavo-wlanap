require 'getoptlong'

def errexit(msg)
  STDERR.puts "ERROR: #{msg}"
  exit 1
end

opts = GetoptLong.new(
                      ['--help', '-h', GetoptLong::NO_ARGUMENT],
                      ['--vtun-address', GetoptLong::REQUIRED_ARGUMENT],
                      ['--vtun-port', GetoptLong::REQUIRED_ARGUMENT],
)

vtun_address = 'wlangw'
vtun_port = 45045

opts.each do |opt, arg|
  case opt
  when '--help'
    puts <<EOF
    Usage: puavo-wlanap [OPTION]...

    Tunneled WLAN accesspoint.

-h, --help                       display this help and exit
    --vtun-address ADDRESS       vtun server address, default: #{vtun_address}
    --vtun-port PORT             vtun server port, default: #{vtun_port}

EOF
    exit(0)
  when '--vtun-address'
    vtun_address = arg
  when '--vtun-port'
    errexit "invalid port number (#{arg})" unless arg =~ /^[1-9][0-9]*$/
    vtun_port = arg.to_i
  end
end

if ARGV.length != 0 then
  errexit "invalid number of arguments (#{ARGV.length}), expected 0"
end
